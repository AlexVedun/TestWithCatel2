                <MenuItem Header="Выход" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="Список тем" ItemsSource="{Binding themesList}" Command="{Binding SelectThemeCommand}">
               
            </MenuItem>--><!--
        </Menu>-->

    </Grid>
    
</catel:Window>
