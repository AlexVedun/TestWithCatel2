                    <Setter Property="Command" Value="{Binding Path=Command}" />
                </Style>
            </Menu.ItemContainerStyle>
            --><!--<MenuItem Header="Файл" >
                <MenuItem Header="Открыть файл вопросов" Command="{Binding OpenFileCommand}"/>
